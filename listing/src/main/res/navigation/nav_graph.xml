<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/RecipeListingFragment">

    <fragment
        android:id="@+id/recipeFragment"
        android:name="com.marleyspoon.listing.ui.detail.RecipeFragment">
        <argument
            android:name="id"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/RecipeListingFragment"
        android:name="com.marleyspoon.listing.ui.list.RecipeListingFragment"
        android:label="Marley Spoon Challenge">
        <action
            android:id="@+id/to_recipe"
            app:destination="@id/recipeFragment"
            app:enterAnim="@android:anim/fade_in"
            app:popExitAnim="@android:anim/fade_out" />
    </fragment>
</navigation>